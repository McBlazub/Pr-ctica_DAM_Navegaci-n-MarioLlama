<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarioLlama_Navegacion.Detalles"
             Title="Detalles"
             Background="MediumPurple">
    <VerticalStackLayout>
        <Label 
            x:Name=" textoLBL"
            Text="{Binding Texto}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="24"/>
        <Label
            x:Name=" textoLBL2"
            Text="{Binding Texto2}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            LineBreakMode="WordWrap"/> <!-- AyudarÃ¡ a que el texto se ajuste adecuadamente a la pantalla-->
    </VerticalStackLayout>
</ContentPage>